# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/profitfirst
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/profitfirst

# JWT Secret (Change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string

# OpenAI API (Required for AI Chatbot)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone (Optional - for Vector Storage)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=profitfirst-analytics

# Email Configuration (Optional)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# Google Analytics (Optional)
# Place your ga-data-key.json file in the root directory
# No environment variable needed, just the file

# Data Sync Configuration (Optional)
SYNC_INTERVAL=1800000  # 30 minutes in milliseconds

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
